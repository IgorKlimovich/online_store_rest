<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="1.6.0" author="igor klimovich">
        <createTable tableName="product">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/></column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(512)">
            </column>
            <column name="price" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="is_exist" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="INT" defaultValue="0">
            </column>
            <column name="name_photo" type="VARCHAR(512)" >
                <constraints nullable="true"/>
            </column>
            <column name="product_category_id" type="INT">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.6.1" author="igor klimovich">
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="product_category_id"
                                 constraintName="fk_Category"
                                 referencedTableName="product_category"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>

